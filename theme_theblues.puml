!global $ITEM_BACKGROUND = "#85BBF0"
!global $ITEM_BORDER = "#3D81C3"

skinparam BackgroundColor white
skinparam BorderColor $ITEM_BORDER
skinparam Shadowing false

skinparam {
    ActorBackgroundColor $ITEM_BACKGROUND
    ControlBackgroundColor $ITEM_BACKGROUND
    DatabaseBackgroundColor $ITEM_BACKGROUND
    EntityBackgroundColor $ITEM_BACKGROUND
    LifeLineBackgroundColor $ITEM_BACKGROUND
    ParticipantBackgroundColor $ITEM_BACKGROUND
    
    ActorBorderColor $ITEM_BORDER
    ArrowColor $ITEM_BORDER
    
    ControlBorderColor $ITEM_BORDER
    DatabaseBorderColor $ITEM_BORDER
    EntityBorderColor $ITEM_BORDER
    LifeLineBorderColor $ITEM_BORDER    
    ParticipantBorderColor $ITEM_BORDER
    
    ActorFontColor black
    DatabaseFontColor black
    LifeLineFontColor black
    
    ParticipantFontColor black
}

skinparam Package {
    BorderColor $ITEM_BORDER
    BackgroundColor transparent
}

skinparam Artifact {
    BackgroundColor $ITEM_BACKGROUND
    BorderColor $ITEM_BORDER
}

skinparam Component {
    BackgroundColor $ITEM_BACKGROUND
    BorderColor $ITEM_BORDER
}

skinparam sequence {
    LifeLineBackgroundColor white
    LifeLineBorderColor $ITEM_BORDER
}

skinparam note {
	FontColor black
    BorderColor black
    BackgroundColor #FFFFEE
}

skinparam state {
    StartColor $ITEM_BORDER
    EndColor $ITEM_BORDER
    BackgroundColor $ITEM_BACKGROUND
    BorderColor $ITEM_BORDER
    ArrowColor $ITEM_BORDER
    
}

skinparam SequenceGroup {
    BackgroundColor $ITEM_BACKGROUND
    BorderColor $ITEM_BORDER
}

skinparam Class {
    BackgroundColor $ITEM_BACKGROUND
    BorderColor $ITEM_BORDER
}

